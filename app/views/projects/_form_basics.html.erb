            <div class="hidable-text-entry">
            <span><%= f.label :name, t('projects.form_basics.project_name.description') %></span>
            <%= render(partial: "details", locals: {
                       criterion: "project_name",
                       details: t('projects.form_basics.project_name.details')
}) %>
            <%= f.text_field :name, class:"form-control",
                             skip_label: true,
                             placeholder: t('projects.form_basics.project_name.placeholder'),
                             spellcheck: false,
                             disabled: view_only %>
            </div>

            <div class="hidable-text-entry">
            <span><%= f.label :description, t('projects.form_basics.description.description') %></span>
            <% if view_only %>
              <div class="discussion-markdown" id="project_description" lang="<%= project.entry_locale %>">
                <%= markdown(project[:description]) %>
              </div>
            <% else %>
              <%= render(partial: "details", locals: {
                   criterion: "description",
                   details: t('projects.form_basics.description.details')
}) %>
            <%= f.text_area :description, class:"form-control",
                            skip_label: true,
                            placeholder: t('projects.form_basics.description.placeholder'),
                            lang: project.entry_locale, spellcheck: true,
                            disabled: view_only %>
            <% end %>
            </div>

            <div class="hidable-text-entry">
              <span><%= f.label :entry_locale, t('projects.form_basics.entry_locale.description') %></span>
              <%= render(partial: "details", locals: {
                         criterion: "entry_locale",
                         details: t('projects.form_basics.entry_locale.details')
              }) %>
              <% if view_only %>
                <div id="project_entry_locale">
                  <%= Rails.application.config.locale_display_names.dig(I18n.locale.to_s, project.entry_locale) || project.entry_locale %>
                </div>
              <% else %>
                <%= f.select :entry_locale,
                             Rails.application.config.locale_select_options[I18n.locale.to_s],
                             {}, {class: 'form-control'} %>
              <% end %>
            </div>

            <div class="hidable-text-entry">
            <span><%= f.label :homepage_url, t('projects.form_basics.homepage_url.description') %></span>
            <% if view_only %>
              <div class="discussion-markdown" id="project_homepage_url">
                 <%= link_to_if project.contains_url?(project.homepage_url), project.homepage_url, project.homepage_url, rel: 'nofollow ugc' %>
              </div>
            <% else %>
              <%= f.text_field :homepage_url, skip_label: true, class: "form-control",
                               placeholder: t('projects.form_basics.homepage_url.placeholder'),
                               disabled: view_only %>
            <% end %>
            </div>

            <div class="hidable-text-entry">
            <span><%= f.label :repo_url, t('projects.form_basics.repo_url.description') %></span>
            <% if view_only %>
              <div class="discussion-markdown" id="project_repo_url">
                 <%= link_to_if project.contains_url?(project.repo_url), project.repo_url, project.repo_url, rel: 'nofollow ugc' %>
              </div>
            <% else %>
              <%= f.text_field :repo_url, class:"form-control",
                               skip_label: true,
                               placeholder:t('projects.form_basics.repo_url.placeholder'),
                               disabled: view_only %>
            <% end %>
            </div>
