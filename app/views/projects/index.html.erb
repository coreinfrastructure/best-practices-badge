<% content_for :nav_extras do %>
  <li>
    <% if logged_in? %>
      <%= link_to 'Add', new_project_path %>
    <% end %>
  </li>
<% end %>

<div class="center">
<h2>Projects</h2>
  <%= search_form_for @search do |f| %>
      <%= f.label(:name_or_project_homepage_url_or_repo_url_cont, "Name or URLs contain") %>
      <%= f.search_field :name_or_project_homepage_url_or_repo_url_cont %>

      <%= f.submit %>
  <% end %>
<br>
<%= link_to 'Add New Project', new_project_path, class:"btn btn-success" %>
<br>
<br>
  <%= render 'table', projects: @projects %>
  <%= will_paginate @projects %>
</div>
