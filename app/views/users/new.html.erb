 <br>
 <h1 class="center">Sign up</h1>

 <div class="row">
   <div class="col-md-6 col-md-offset-3">
     <%= form_for(@user) do |f| %>
       <%= render 'shared/error_messages', object: f.object %>
       <%= f.label :name %>
       <%= f.text_field :name, class:"form-control" %>

       <%= f.label :email %>
       <%= f.email_field :email, class:"form-control" %>

       <%= f.label :password %>
       <%= f.password_field :password, autocomplete: "off", class:"form-control", required: true, minlength: User::MIN_PASSWORD_LENGTH %>

       <%= f.label :password_confirmation, "Confirm Password" %>
       <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", required: true, minlength: User::MIN_PASSWORD_LENGTH %>
       <%= f.hidden_field :provider, :value => "local" %>
       <%= f.submit "Create my account", class: "btn btn-primary" %>
     <% end %>
   </div>
 </div>

</div>
